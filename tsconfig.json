{
    "compilerOptions": {
      "types": ["@webgpu/types"],
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "baseUrl": "./",
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@/*": ["src/*"]
      },
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
  }